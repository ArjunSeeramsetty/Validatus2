# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# GCP Project Configuration
project_id = "your-gcp-project-id"

# Environment Configuration (REQUIRED - no default to prevent accidents)
environment = "development"  # Options: development, staging, production

# GCP Region Configuration
region = "us-central1"
zone   = "us-central1-a"

# Security Configuration
deletion_protection = true  # Set to false only for development/testing

# Database Configuration
db_disk_size = 100  # Minimum: 10 GB
db_max_connections = 100  # Must be > 0

# Redis Configuration
redis_memory_size = 4  # Minimum: 1 GB
redis_tier = "STANDARD_HA"  # Options: BASIC, STANDARD_HA

# Spanner Configuration
spanner_processing_units = 100  # Minimum: 100, must be multiple of 100

# Storage Configuration
enable_bucket_versioning = true
bucket_lifecycle_enabled = true

# Cost Optimization
enable_cost_optimization = true
enable_backup = true

# Deployment Configuration
deployment_target = "cloud_run"  # Options: cloud_run, gke, compute_engine

# Kubernetes Configuration (only needed for GKE)
k8s_namespace = "default"
k8s_service_account = "validatus-backend"