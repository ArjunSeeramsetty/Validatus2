# Validatus Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
# Format: postgresql://username:password@host:port/database
# For Cloud SQL: postgresql://username:password@/database?host=/cloudsql/project:region:instance
DATABASE_URL=postgresql://validatus_app:password@localhost:5432/validatusdb

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# GCP Configuration (for production)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# CORS Configuration (for production)
ALLOWED_ORIGINS=https://your-frontend-url.com,https://your-backend-url.com

# Security Configuration
# Set to true for production deployments
ENABLE_HTTPS=true

# Development Configuration
# Set to true for local development with mock data
LOCAL_DEVELOPMENT_MODE=false

# Database Connection Pool Settings (optional)
DB_MAX_CONNECTIONS=20
DB_POOL_TIMEOUT=30

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_VERSION=v3
API_TIMEOUT=30

# Feature Flags
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=false