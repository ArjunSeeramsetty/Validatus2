# GCP Project Configuration
GCP_PROJECT_ID=validatus-platform
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
ENVIRONMENT=production

# Cloud SQL Configuration
CLOUD_SQL_CONNECTION_NAME=validatus-platform:us-central1:validatus-primary
CLOUD_SQL_DATABASE=validatus
CLOUD_SQL_USER=validatus_app
# Password will be retrieved from Secret Manager
CLOUD_SQL_PASSWORD_SECRET=cloud-sql-password

# Cloud Storage Configuration
CONTENT_STORAGE_BUCKET=validatus-platform-validatus-content
EMBEDDINGS_STORAGE_BUCKET=validatus-platform-validatus-embeddings
REPORTS_STORAGE_BUCKET=validatus-platform-validatus-reports

# Vertex AI Configuration
VECTOR_SEARCH_LOCATION=us-central1
EMBEDDING_MODEL=text-embedding-004
VECTOR_DIMENSIONS=768

# Memorystore Redis Configuration
REDIS_HOST=10.1.0.2
REDIS_PORT=6379

# Cloud Spanner Configuration
SPANNER_INSTANCE_ID=validatus-analytics
SPANNER_DATABASE_ID=validatus-analytics

# Service Account Configuration
SERVICE_ACCOUNT_EMAIL=validatus-backend@validatus-platform.iam.gserviceaccount.com
GOOGLE_APPLICATION_CREDENTIALS=/app/service-account-key.json

# Application Configuration
LOCAL_DEVELOPMENT_MODE=false
USE_IAM_AUTH=true
MAX_CONCURRENT_OPERATIONS=50
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT_SECONDS=30

# Security Configuration
ENCRYPTION_KEY_NAME=projects/validatus-platform/locations/us-central1/keyRings/validatus/cryptoKeys/application-data

# CORS Configuration
ALLOWED_ORIGINS=https://validatus-platform.web.app,https://validatus.arjuncode.com

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE=50MB

# Monitoring Configuration
ENABLE_MONITORING=true
ENABLE_TRACING=true
LOG_LEVEL=INFO
